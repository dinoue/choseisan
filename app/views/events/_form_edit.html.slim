- title_options = "候補日程の削除"
- title_options_addition = "候補日程の追加"
- tooltip_delete_options = "チェックするとこの候補を削除します"
- ph_options_text = "例：&#13;&#10;4/1(月) 19:00〜&#13;&#10;4/2(火) 20:00〜&#13;&#10;4/3(水) 21:00〜".html_safe

label.form-label #{title_options}
= f.input :options_deletes, as: :check_boxes,
  label: false,
  collection: @event.options,
  value_method: :id,
  label_method: lambda { |option| "#{option.text}".html_safe } ,
  input_class: nil,
  input_html: {class: ""},
  item_label_tag: :div ,
  item_label_class: "form-checkbox form-inline",
  item_wrapper_tag: :div,
  item_wrapper_class: ""
.m-2
labe.form-label #{title_options_addition}
= f.input :options_text, as: :text,
  label: false,
  required: false,
  input_html: { class:"form-input", rows: 5, placeholder: ph_options_text },
  item_label_class: "form-label form-inline"

javascript:
  $(function() {
    $("label[for^=event_options_deletes]").popover({
      trigger: "hover", placement: "right", content: "#{tooltip_delete_options}"
    });
  });
